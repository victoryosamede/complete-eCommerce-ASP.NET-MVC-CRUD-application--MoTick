 @model IEnumerable<Movie>

    @{
        ViewData["Title"] = "List of Movies";
    }

    <div class="movies-cards-container">
         @foreach(var item in Model)
    {
            <div class="card border-primary">
                <div>
                    <div>
                        <div class="card-header text-white bg-info">
                            <div class="card-text py-2" style="display:flex; flex-direction: row; justify-content: space-between">
                                <h5 class="card-title">
                                    @item.Name
                                </h5>
                                    <a class="text-white"><i class="bi bi-pencil-square"></i>
                                    </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-flex-container" >
                        <div style="height: 300px; flex: 0.4">
                            <img src="@item.ImageURL" style="width: 100%; height: 100%; object-fit: cover;" alt="@item.Name"/>
                        </div>
                        <div style="flex: 0.6" >
                            <div class="card-body">
                                <p class="card-text">@item.Synopsis</p>
                                <p class="card-text"><b>Cinema:</b>@item.Cinema.Name</p>
                                <p class="card-text"><b>Category:</b>@item.MovieCategory</p>
                                <p class="card-text"><b>Start Date:</b>@item.StartDate.ToString("dd MM yy")</p>
                                <p class="card-text"><b>End Date:</b>@item.EndDate.ToString("dd MM yy")</p>
                                <p class="card-text"><b>Status</b>
                                    @if(DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                    {
                                        <span class="badge bg-success text-white">AVAILABLE</span>
                                    }
                                    else if(DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger text-white">EXPIRED</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">UPCOMING</span>
                                    }
                                </p>
                            </div>

                        </div>
                    </div>

                    <div >
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right">
                                    <i class="bi bi-eye-fill"></i>
                                    Show Details
                                </a>
                                <a class="btn btn-custom text-white bg-success" >
                                    <i class="bi bi-cart-plus"></i>
                                     Add To Cart(Price @item.Price.ToString())
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>